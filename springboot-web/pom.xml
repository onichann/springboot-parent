		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-redis</artifactId>
		</dependency>

		<!--springboot Session 放入Redis-->
		<dependency>
			<groupId>org.springframework.session</groupId>
